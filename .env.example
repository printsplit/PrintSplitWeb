# PrintSplit Web - Environment Configuration
# Copy this file to .env and update the values

# MinIO Configuration
MINIO_ROOT_USER=printsplit
MINIO_ROOT_PASSWORD=change_me_to_secure_password

# Application Settings
NODE_ENV=production
MAX_FILE_SIZE=100MB
WORKER_CONCURRENCY=2
JOB_RETENTION_HOURS=48
JOB_RETENTION_DAYS=2

# Admin Dashboard
# Set a secure password for accessing the admin dashboard at /admin
ADMIN_PASSWORD=change_me_to_secure_admin_password

# Rate Limiting
# Set to false to completely disable rate limiting
RATE_LIMIT_ENABLED=true
# Limit requests per IP address to prevent abuse
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=200

# Optional: HTTPS Configuration
# SSL_CERT_PATH=./nginx/ssl/cert.pem
# SSL_KEY_PATH=./nginx/ssl/key.pem
